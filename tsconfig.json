{
  "compilerOptions": {
    // Strict TypeScript settings
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    
    // Module settings
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    
    // Path mapping for monorepo
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["packages/shared/src/*"],
      "@server/*": ["apps/server/src/*"],
      "@web/*": ["apps/web/src/*"]
    },
    
    // Output settings
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    // Advanced settings
    "incremental": true,
    "composite": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node"],
    
    // JSX for React (web app)
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "apps/**/*",
    "packages/**/*",
    "*.ts",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "./packages/shared" },
    { "path": "./apps/server" },
    { "path": "./apps/web" }
  ]
}